doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/style.css")
  body
    // Google Translate dropdown
    include _translate.pug
    
    // Include the shared navigation bar component
    include _navbar.pug

    .container.mt-5.d-flex.justify-content-center
      .card.shadow-sm.border.rounded.p-4(style="max-width: 400px; width: 100%;")
        h2.card-title.text-center.mb-4 Login

        //- Error message display
        if error
          .alert.alert-danger(role="alert") #{error}

        form(action="/login", method="POST")
          .mb-3
            label.form-label(for="username") Username:
            input.form-control(type="text", name="username", id="username", required)

          .mb-3
            label.form-label(for="password") Password:
            input.form-control(type="password", name="password", id="password", required)

          button.btn.btn-primary.w-100(type="submit") Login

    // Include the shared footer component  
    include _footer.pug

    // Link to Bootstrap Bundle JS for dropdowns and other interactive components
    include _bootstrap.pug