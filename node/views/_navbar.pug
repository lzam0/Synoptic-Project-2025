// views/_navbar.pug
// This file contains the reusable navigation bar component.
// It conditionally displays the 'Logout' button based on the 'user' variable.

.navbar
  .logo
    img.navbar-brand-logo(src="/images/zoomLogo.png", alt="DataFlow Logo")
  button#burger(type="button", aria-label="Open navigation")
    span.burger-bar
    span.burger-bar
    span.burger-bar
  .nav-links
    a(href="/") Home
    a(href="/data-visualisation") Data
    a(href="/information") Information
    a(href="/about") About Us
    a(href="/login") Login
  // Mobile nav (hidden by default)
  .mobile-nav#mobileNav
    a(href="/") Home
    a(href="/data-visualisation") Data
    a(href="/information") Information
    a(href="/about") About Us
    a(href="/login") Login
    if user
      li.nav-item
        form.d-flex(action="/logout", method="POST")
          button.btn.btn-outline-danger(type="submit") Logout

// This script toggles the mobile navigation menu when the burger icon is clicked.
script.
  const burger = document.getElementById('burger');
  const mobileNav = document.getElementById('mobileNav');
  burger.addEventListener('click', () => {
    mobileNav.classList.toggle('open');
  });
  // Optional: close menu when clicking a link
  mobileNav.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => mobileNav.classList.remove('open'));
  });
