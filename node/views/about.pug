doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Home
    // Link to Bootstrap CSS for styling and responsiveness
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/style.css")
    
  body
    // Google Translate dropdown
    include _translate.pug

    // Include the shared navigation bar component
    include _navbar.pug

    main.container.mt-5 
      h1.text-start.mb-4 Welcome to the DataFlow.
      p.text-start DataFlow is a website that offers a variety of data visualizations, as well as a platform for people to learn more about floods. The site is designed to be user-friendly and accessible, with a focus on providing a seamless experience for users of all skill levels.
    section.container.mt-5
      h2.text-left Navigation

    .d-md-flex.flex-md-equal.w-100.my-md-3.pt-md-5
      .bg-dark.mr-md-3.pt-3.px-3.pt-md-5.px-md-5.text-center.text-white.overflow-hidden.w-100
        .my-3.py-3 
          h2.display-5 Data Visualizations 
          p.lead For analysing, accessing, and visualizing data.
          a.btn.btn-outline-light(href='/data-visualisation') Go
      .bg-light.mr-md-3.pt-3.px-3.pt-md-5.px-md-5.text-center.overflow-hidden.w-100
        .my-3.py-3 
          h2.display-5 Information Page
          p.lead For learning more about floods and their impact.
          a.btn.btn-outline-dark(href='#') Go
          
    include _footer.pug
    // Include the shared footer component
            
    // retrigger the Google Translate after the page loads
    script.
      window.addEventListener('load', function() {
        if (typeof googleTranslateElementInit === 'function') {
          googleTranslateElementInit();
        }
      });

    // Link to Bootstrap Bundle JS for dropdowns and other interactive components
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
